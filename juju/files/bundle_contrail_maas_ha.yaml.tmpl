{% set JUJU_MACHINES = JUJU_MACHINES.split(',') -%}
{% set VIRTUAL_IPS = VIRTUAL_IPS.split() -%}

variables:
  contrail-controller-vip:         &contrail-controller-vip        "{{ VIRTUAL_IPS[6] }}"

machines:
  "{{ JUJU_MACHINES[0] }}":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=32G cores=8 root-disk=300G
  "{{ JUJU_MACHINES[1] }}":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=32G cores=8 root-disk=300G
  "{{ JUJU_MACHINES[2] }}":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=32G cores=8 root-disk=300G

series: "{{ UBUNTU_SERIES }}"
services:
  contrail-controller:
    charm: "{{ JUJU_REPO }}/contrail-controller"
    series: "{{ UBUNTU_SERIES }}"
    num_units: 3
    options:
      vip: *contrail-controller-vip
      log-level: "SYS_DEBUG"
      auth-mode: "rbac"
      cassandra-minimum-diskgb: "4"
      cassandra-jvm-extra-opts: "-Xms1g -Xmx2g"
      docker-registry: "{{ CONTAINER_REGISTRY }}"
      docker-registry-insecure: true
      image-tag: "{{ CONTRAIL_CONTAINER_TAG }}"
      local-rabbitmq-hostname-resolution: true
      min-cluster-size: 3
{%- if DATA_NETWORK %}
      data-network: "{{ DATA_NETWORK }}"
{%- endif %}
    expose: true
    to:
      - "{{ JUJU_MACHINES[0] }}"
      - "{{ JUJU_MACHINES[1] }}"
      - "{{ JUJU_MACHINES[2] }}"
  contrail-analyticsdb:
    charm: "{{ JUJU_REPO }}/contrail-analyticsdb"
    series: "{{ UBUNTU_SERIES }}"
    num_units: 3
    options:
      log-level: "SYS_DEBUG"
      cassandra-minimum-diskgb: "4"
      cassandra-jvm-extra-opts: "-Xms1g -Xmx2g"
      docker-registry: "{{ CONTAINER_REGISTRY }}"
      docker-registry-insecure: true
      image-tag: "{{ CONTRAIL_CONTAINER_TAG }}"
      min-cluster-size: 3
    expose: true
    to:
      - "{{ JUJU_MACHINES[0] }}"
      - "{{ JUJU_MACHINES[1] }}"
      - "{{ JUJU_MACHINES[2] }}"
  contrail-analytics:
    charm: "{{ JUJU_REPO }}/contrail-analytics"
    series: "{{ UBUNTU_SERIES }}"
    num_units: 3
    options:
      log-level: "SYS_DEBUG"
      docker-registry: "{{ CONTAINER_REGISTRY }}"
      docker-registry-insecure: true
      image-tag: "{{ CONTRAIL_CONTAINER_TAG }}"
      min-cluster-size: 3
    expose: true
    to:
      - "{{ JUJU_MACHINES[0] }}"
      - "{{ JUJU_MACHINES[1] }}"
      - "{{ JUJU_MACHINES[2] }}"
  contrail-agent:
    charm: "{{ JUJU_REPO }}/contrail-agent"
    series: "{{ UBUNTU_SERIES }}"
    options:
      log-level: "SYS_DEBUG"
      docker-registry: "{{ CONTAINER_REGISTRY }}"
      docker-registry-insecure: true
      image-tag: "{{ CONTRAIL_CONTAINER_TAG }}"
  keepalived:
    charm: cs:~containers/keepalived
    options:
      virtual_ip: *contrail-controller-vip
  haproxy:
    charm: cs:haproxy
    num_units: 3
    expose: true
    to:
      - "{{ JUJU_MACHINES[0] }}"
      - "{{ JUJU_MACHINES[1] }}"
      - "{{ JUJU_MACHINES[2] }}"
    options:
      peering_mode: active-active
      ssl_cert: SELFSIGNED
  contrail-keystone-auth:
    charm: "{{ JUJU_REPO }}/contrail-keystone-auth"
    series: "{{ UBUNTU_SERIES }}"
    num_units: 1
    to:
      - "lxd:{{ JUJU_MACHINES[0] }}"
  contrail-openstack:
    charm: "{{ JUJU_REPO }}/contrail-openstack"
    series: "{{ UBUNTU_SERIES }}"
    options:
      docker-registry: "{{ CONTAINER_REGISTRY }}"
      docker-registry-insecure: true
      image-tag: "{{ CONTRAIL_CONTAINER_TAG }}"
{%- if SSL_ENABLE == 'true' %}
  easyrsa:
    # this must be one in HA
    charm: cs:~containers/easyrsa
    num_units: 1
    to:
      - "{{ JUJU_MACHINES[0] }}"
{%- endif %}

relations:
- [ contrail-controller, contrail-analytics ]
- [ contrail-controller, contrail-analyticsdb ]
- [ contrail-analytics, contrail-analyticsdb ]
- [ contrail-agent, contrail-controller ]
- [ contrail-controller:http-services, haproxy:reverseproxy ]
- [ contrail-controller:https-services, haproxy:reverseproxy ]
- [ contrail-analytics:http-services, haproxy:reverseproxy ]
- [ keepalived:juju-info, haproxy:juju-info ]
- [ contrail-controller, contrail-keystone-auth ]
- [ contrail-openstack, contrail-controller ]

{%- if SSL_ENABLE == 'true' %}
- [ easyrsa, contrail-controller ]
- [ easyrsa, contrail-analyticsdb ]
- [ easyrsa, contrail-analytics ]
- [ easyrsa, contrail-agent ]
{%- endif %}
