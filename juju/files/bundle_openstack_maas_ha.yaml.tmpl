{% set VIRTUAL_IPS = VIRTUAL_IPS.split() -%}

heat-vip:            &heat-vip            "{{ VIRTUAL_IPS[0] }}"
glance-vip:          &glance-vip          "{{ VIRTUAL_IPS[1] }}"
keystone-vip:        &keystone-vip        "{{ VIRTUAL_IPS[2] }}"
mysql-vip:           &mysql-vip           "{{ VIRTUAL_IPS[3] }}"
neutron-api-vip:     &neutron-api-vip     "{{ VIRTUAL_IPS[4] }}"
nova-cc-vip:         &nova-cc-vip         "{{ VIRTUAL_IPS[5] }}"

machines:
  "0":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=32G cores=8 root-disk=300G "{% if ENABLE_DPDK_SRIOV is sameas true %} tags=control {% endif %}"
  "1":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=32G cores=8 root-disk=300G "{% if ENABLE_DPDK_SRIOV is sameas true %} tags=control {% endif %}"
  "2":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=32G cores=8 root-disk=300G "{% if ENABLE_DPDK_SRIOV is sameas true %} tags=control {% endif %}"
  "3":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=15G cores=2 root-disk=100G "{% if ENABLE_DPDK_SRIOV is sameas true %} tags=sriov {% endif %}"
  "4":
    series: "{{ UBUNTU_SERIES }}"
    constraints: mem=15G cores=2 root-disk=100G "{% if ENABLE_DPDK_SRIOV is sameas true %} tags=dpdk {% endif %}"

series: "{{ UBUNTU_SERIES }}"
services:
  hacluster-mysql:
    charm: cs:hacluster
  hacluster-keystone:
    charm: cs:hacluster
  hacluster-nova:
    charm: cs:hacluster
  hacluster-heat:
    charm: cs:hacluster
  hacluster-neutron:
    charm: cs:hacluster
  hacluster-glance:
    charm: cs:hacluster
  glance:
    charm: "cs:{{ UBUNTU_SERIES }}/glance"
    num_units: 3
    options:
      vip: *glance-vip
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
    expose: true
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  ceph-mon:
    charm: cs:ceph-mon
    num_units: 3
    options:
      expected-osd-count: 3
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  ceph-osd:
    charm: cs:ceph-osd
    num_units: 3
    options:
      osd-devices: /var/lib/ceph/storage
    to:
      - "0"
      - "1"
      - "2"
  keystone:
    charm: "cs:{{ UBUNTU_SERIES }}/keystone"
    num_units: 3
    options:
      vip: *keystone-vip
      admin-password: "{{ AUTH_PASSWORD }}"
      admin-role: "admin"
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
      preferred-api-version: "3"
    expose: true
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  mysql:
    charm: "cs:{{ UBUNTU_SERIES }}/percona-cluster"
    num_units: 3
    options:
      vip: *mysql-vip
      min-cluster-size: 3
      root-password: "password"
      max-connections: 1500
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  rabbitmq-server:
    charm: "cs:{{ UBUNTU_SERIES }}/rabbitmq-server"
    num_units: 3
    options:
      min-cluster-size: 3
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  neutron-api:
    charm: "cs:{{ UBUNTU_SERIES }}/neutron-api"
    num_units: 3
    options:
      vip: *neutron-api-vip
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
      manage-neutron-plugin-legacy-mode: false
      neutron-security-groups: "true"
    expose: true
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  heat:
    charm: "cs:heat"
    num_units: 3
    options:
      vip: *heat-vip
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
    expose: true
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  nova-cloud-controller:
    charm: "cs:{{ UBUNTU_SERIES }}/nova-cloud-controller"
    num_units: 3
    options:
      vip: *nova-cc-vip
      network-manager: "Neutron"
      console-access-protocol: "novnc"
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
    expose: true
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
  memcached:
    charm: "cs:{{ UBUNTU_SERIES }}/memcached"
    num_units: 3
    options:
      allow-ufw-ip6-softfail: "True"
    to:
      - "lxd:0"
      - "lxd:1"
      - "lxd:2"
{%- if ENABLE_DPDK_SRIOV is sameas true %}
  nova-compute-dpdk:
    charm: "cs:{{ UBUNTU_SERIES }}/nova-compute"
    series: {{ UBUNTU_SERIES }}
    num_units: 1
    options:
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
      virt-type: "qemu"
      enable-resize: "true"
      enable-live-migration: "true"
      migration-auth-type: "ssh"
    to:
      - "4"
  openstack-dashboard:
    charm: "cs:{{ UBUNTU_SERIES }}/openstack-dashboard"
    num_units: 1
    options:
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
    expose: true
    to:
      - "lxd:2"
{%- else %}
  nova-compute:
    charm: "cs:{{ UBUNTU_SERIES }}/nova-compute"
    series: {{ UBUNTU_SERIES }}
    num_units: 2
    options:
      debug: "true"
      openstack-origin: "{{ OPENSTACK_ORIGIN }}"
      virt-type: "qemu"
      enable-resize: "true"
      enable-live-migration: "true"
      migration-auth-type: "ssh"
    to:
      - "3"
      - "4"
{%- endif %}
  # misc

  ubuntu:
    charm: "cs:{{ UBUNTU_SERIES }}/ubuntu"
    num_units: 5
    to:
      - "0"
      - "1"
      - "2"
      - "3"
      - "4"
  ntp:
    charm: "cs:{{ UBUNTU_SERIES }}/ntp"


